page {
  background-color: #efefef;
}
page .address_row {
  padding: 20rpx;
}
page .address_row .address_uname_row {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
page .address_row .address_detail {
  margin: 14rpx 0;
}
page .cart_main {
  background-color: #efefef;
}
page .cart_main .cart_content {
  padding: 20rpx;
}
page .cart_main .cart_content .cart_item {
  width: 100%;
  padding: 16rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  background-color: #fff;
  display: flex;
}
page .cart_main .cart_content .cart_item .cart_item_img {
  flex: 3;
}
page .cart_main .cart_content .cart_item .cart_item_img image {
  width: 100%;
}
page .cart_main .cart_content .cart_item .cart_item_info {
  flex: 5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
page .cart_main .cart_content .cart_item .cart_item_info .goods_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
page .cart_main .cart_content .cart_item .cart_item_info .goods_price_wrap {
  display: flex;
  justify-content: space-between;
}
page .cart_main .cart_content .cart_item .cart_item_info .goods_price_wrap .goods_price {
  color: #ff5372;
  font-size: 38rpx;
}
page .cart_main .cart_content .cart_item .cart_item_info .goods_price_wrap .goods_count_tool {
  display: flex;
}
page .cart_main .cart_content .cart_item .cart_item_info .goods_price_wrap .goods_count_tool .num_count {
  flex: 1;
  text-align: center;
  line-height: 55rpx;
  width: 55rpx;
  height: 55rpx;
}
page .pay_tools {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  border-top: 1rpx solid #ccc;
  display: flex;
}
page .pay_tools .total_price_wrap {
  flex: 5;
  text-align: right;
}
page .pay_tools .total_price_wrap .total_price .total_price_txt {
  font-size: 36rpx;
  font-weight: 600;
  color: #ff5372;
}
page .pay_tools .total_price_wrap .yunfei {
  color: #666;
  font-size: 30rpx;
}
page .pay_tools .pay_wrap {
  flex: 3;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 34rpx;
  color: #fff;
}
page .pay_tools .pay_wrap .pay {
  width: 80%;
  height: 80%;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 36rpx;
  background-color: #eb4450;
}
