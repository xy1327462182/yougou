page {
  height: 100%;
}
page .yg_category {
  width: 100%;
  height: 100%;
}
page .yg_category .cates_wrap {
  width: 100%;
  height: calc(100vh - 90rpx);
  display: flex;
}
page .yg_category .cates_wrap .left_cates {
  flex: 2;
}
page .yg_category .cates_wrap .left_cates .left_cates_item {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  background-color: #f0f3f0;
  border-bottom: 4rpx solid #dbdedb;
  font-size: 28rpx;
}
page .yg_category .cates_wrap .left_cates .cates_item_active {
  background-color: #fff;
  border-left: 6rpx solid #f71902;
}
page .yg_category .cates_wrap .right_content {
  flex: 5;
}
page .yg_category .cates_wrap .right_content .right_content_item {
  width: 100%;
  margin: 30rpx 0;
}
page .yg_category .cates_wrap .right_content .right_content_item .item_title {
  height: 80rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
page .yg_category .cates_wrap .right_content .right_content_item .item_title text {
  margin: 0 6rpx;
}
page .yg_category .cates_wrap .right_content .right_content_item .item_contents {
  display: flex;
  flex-flow: row wrap;
  width: 100%;
}
page .yg_category .cates_wrap .right_content .right_content_item .item_contents .item_contents_goods {
  width: 33.33%;
  text-align: center;
}
page .yg_category .cates_wrap .right_content .right_content_item .item_contents .item_contents_goods image {
  width: 50%;
}
page .yg_category .cates_wrap .right_content .right_content_item .item_contents .item_contents_goods .goods_name {
  font-size: 28rpx;
}
